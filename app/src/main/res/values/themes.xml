<resources>
    <!-- Base application theme. -->
    <style name="Theme.MyBudget" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue_400</item>
        <item name="colorPrimaryVariant">@color/dark_blue_900</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_blue_200</item>
        <item name="colorSecondaryVariant">@color/light_blue_600</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MyBudget.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyBudget.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyBudget.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.MyBudget.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background to black -->
<!--        <item name="windowSplashScreenBackground">@android:color/black</item>-->
        <item name="windowSplashScreenBackground">@android:color/holo_blue_light</item>
        <!-- Use windowSplashScreenAnimatedIcon to add a drawable or an animated
             drawable. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_screen</item>
        <!-- Set the theme of the Activity that follows your splash screen. -->
        <item name="postSplashScreenTheme">@style/Theme.MyBudget</item>
    </style>
</resources>